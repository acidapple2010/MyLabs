<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lenear_layout">
    <Button
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@android:drawable/stat_notify_sync"
            android:onClick="onClick"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
                 android:layout_height="406dp"
                 android:id="@+id/frameLayout">
        <FrameLayout android:layout_width="114dp"
                     android:layout_height="408dp"
                     android:layout_gravity="right|bottom"
                     android:background="#ffde00ff" android:id="@+id/frameLayout1"/>
        <FrameLayout android:layout_width="206dp"
                     android:layout_height="111dp"
                     android:layout_gravity="left|top"
                     android:background="#ff97ff93" android:id="@+id/frameLayout2"
                     android:longClickable="true" android:measureAllChildren="false" android:contentDescription="1"/>
        <FrameLayout android:layout_width="205dp"
                     android:layout_height="200dp"
                     android:layout_gravity="right|center_vertical"
                     android:background="#ff2200ff" android:id="@+id/frameLayout3"/>
        <FrameLayout android:layout_width="314dp"
                     android:layout_height="109dp"
                     android:layout_gravity="right|bottom"
                     android:background="#ffff0020" android:id="@+id/frameLayout4"/>
        <FrameLayout android:layout_width="116dp"
                     android:layout_height="200dp"
                     android:layout_gravity="left|center_vertical"
                     android:background="#ffffde00" android:id="@+id/frameLayout5"/>
        <FrameLayout android:layout_width="116dp"
                     android:layout_height="196dp"
                     android:layout_gravity="left|bottom"
                     android:background="#ff7ff1ff" android:id="@+id/frameLayout6"/>
    </FrameLayout>
</LinearLayout>